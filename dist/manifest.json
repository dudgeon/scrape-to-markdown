{
  "manifest_version": 3,
  "name": "scrape-to-markdown (s2md)",
  "version": "0.1.0",
  "description": "Copy Slack conversations as clean markdown",
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "storage",
    "cookies",
    "webRequest"
  ],
  "host_permissions": [
    "https://app.slack.com/*",
    "https://slack.com/api/*",
    "https://edgeapi.slack.com/*"
  ],
  "content_scripts": [
    {
      "js": [
        "assets/index.ts-loader-CTQUeO4M.js"
      ],
      "matches": [
        "https://app.slack.com/*"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "src/options/options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "matches": [
        "https://app.slack.com/*"
      ],
      "resources": [
        "assets/constants-I65fpLFJ.js",
        "assets/index.ts-C-KoU3RY.js"
      ],
      "use_dynamic_url": false
    }
  ]
}
