{
  "manifest_version": 3,
  "name": "scrape-to-markdown (s2md)",
  "version": "0.2.0",
  "description": "Clip any web page or Slack conversation as clean markdown â€” copy to clipboard or download as .md",
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "contextMenus",
    "offscreen",
    "scripting",
    "storage",
    "cookies",
    "webRequest"
  ],
  "host_permissions": [
    "https://app.slack.com/*",
    "https://slack.com/api/*",
    "https://edgeapi.slack.com/*"
  ],
  "content_scripts": [
    {
      "js": [
        "assets/index.ts-loader-DcUrAqJl.js"
      ],
      "matches": [
        "https://app.slack.com/*"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Shift+M"
      },
      "description": "Open s2md popup"
    },
    "clip-page": {
      "suggested_key": {
        "default": "Alt+Shift+C"
      },
      "description": "Copy page as Markdown"
    }
  },
  "options_page": "src/options/options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "matches": [
        "https://app.slack.com/*"
      ],
      "resources": [
        "assets/constants-I65fpLFJ.js",
        "assets/url-parser-DW0nA-39.js",
        "assets/index.ts-Dx3il9W1.js"
      ],
      "use_dynamic_url": false
    }
  ]
}
