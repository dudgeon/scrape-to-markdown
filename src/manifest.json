{
  "manifest_version": 3,
  "name": "scrape-to-markdown (s2md)",
  "version": "0.1.0",
  "description": "Clip any web page or Slack conversation as clean markdown â€” copy to clipboard or download as .md",
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "scripting",
    "storage",
    "cookies",
    "webRequest"
  ],
  "host_permissions": [
    "https://app.slack.com/*",
    "https://slack.com/api/*",
    "https://edgeapi.slack.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://app.slack.com/*"],
      "js": ["src/content/index.ts"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "src/options/options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
